@inject IThemeManager ThemeManager
<PageTitle>@ChildContent</PageTitle>
<AeroFlexContainer>
    @if(!string.IsNullOrEmpty( IconToShow))
    {
        <MudIcon Icon="@IconToShow" Color="Color" Style="margin-right: 10px;" Size="Size.Small"/>
    }
    <MudText Typo="@Typo" Color="Color">@Localizer[titleText]</MudText>
</AeroFlexContainer>
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public string? Icon { get; set; }
    
    private string? IconToShow => Icon ?? ThemeManager.TitleIcon;

    [Parameter] public Typo Typo { get; set; } = Typo.h1;
    [Parameter] public Color Color { get; set; } = Color.Tertiary;
    
    private string? titleText;
    
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        titleText = ChildContent.GetText();
    }
}