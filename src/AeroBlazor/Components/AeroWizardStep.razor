@if (CurrentWizard.ActiveStepId == StepId)
{
    @ChildContent
}
else
{
    <MudText Typo="Typo.h3">@Localizer["Not active"]</MudText>
}

@code {
    [CascadingParameter]
    private AeroWizard CurrentWizard { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public int StepId { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        CurrentWizard.AddStep(this);
    }
}