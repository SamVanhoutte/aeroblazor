<MudAlert Severity="@(Error ? Severity.Error : Severity.Warning)">@Localizer[childContentText]</MudAlert>
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public Typo Typo { get; set; } = Typo.h2;

    [Parameter] public bool Error { get; set; } = false;

    private string? childContentText;
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        childContentText = ChildContent.GetText();
    }
}